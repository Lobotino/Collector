<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/elemImage"
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:contentDescription=""
            app:srcCompat="@mipmap/ic_camera"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/etElemName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/elemImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="29dp"
            android:ems="10"
            android:hint="@string/name_elem"
            android:inputType="textShortMessage"
            tools:ignore="LabelFor" />

        <EditText
            android:id="@+id/etElemDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/etElemName"
            android:layout_alignStart="@+id/etElemName"
            android:layout_below="@+id/etElemName"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:hint="@string/desc_elem"
            android:inputType="textMultiLine"
            tools:ignore="LabelFor" />

        <Button
            android:id="@+id/button_accept"
            style="@style/AppTheme.ButtonReg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etElemDesc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:text="@string/Ready"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/tvAddElemStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etElemDesc"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="@+id/etElemDesc"
            android:layout_marginTop="9dp"
            android:text=""
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>
</ScrollView>